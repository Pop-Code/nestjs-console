{
    "name": "nestjs-console",
    "version": "3.0.0",
    "description": "A NestJS module that provide a cli",
    "keywords": [
        "nestjs",
        "module",
        "cli",
        "console",
        "commander"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "repository": "git@github.com:Pop-Code/nestjs-console.git",
    "author": "Rmannn <alex.hermann@pop-code.com>",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/common": "^6",
        "@nestjs/core": "^6",
        "commander": "^5.0.0"
    },
    "dependencies": {
        "ora": "4.0.3",
        "prettier": "2.0.5"
    },
    "devDependencies": {
        "@nestjs/common": "7.0.8",
        "@nestjs/core": "7.0.8",
        "@nestjs/platform-express": "7.0.8",
        "@nestjs/testing": "7.0.8",
        "@types/jest": "25.2.1",
        "@typescript-eslint/eslint-plugin": "2.29.0",
        "@typescript-eslint/parser": "2.29.0",
        "@types/node": "13.13.2",
        "codecov": "3.6.5",
        "commander": "5.0.0",
        "eslint": "6.8.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-prefer-arrow": "1.2.0",
        "eslint-config-prettier": "6.11.0",
        "jest": "25.4.0",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.5",
        "ts-jest": "25.4.0",
        "ts-node": "8.9.0",
        "tsconfig-paths": "3.9.0",
        "typedoc": "0.17.4",
        "typescript": "3.8.3"
    },
    "scripts": {
        "build": "rm -Rf ./dist && tsc -b",
        "doc": "rm -Rf ./docs && typedoc ./src && touch ./docs/.nojekyll",
        "console": "node dist/test/console.js",
        "console:dev": "ts-node -r tsconfig-paths/register src/test/console.ts",
        "console:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/test/console.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
        "lint": "eslint ./src/**/*.ts",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
    },
    "engines": {
        "node": ">=0.10"
    }
}
