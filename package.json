{
    "name": "nestjs-console",
    "version": "1.0.1",
    "description": "A NestJS module that provide a cli",
    "keywords": [
        "nestjs",
        "module",
        "cli",
        "console",
        "commander"
    ],
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "repository": "git@github.com:Pop-Code/nestjs-console.git",
    "author": "Rmannn <alex.hermann@pop-code.com>",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/common": "^5.4.0 || ^6",
        "@nestjs/core": "^5.4.0 || ^6"
    },
    "dependencies": {
        "commander": "^2.20.0",
        "ora": "^3.4.0"
    },
    "devDependencies": {
        "@nestjs/common": "6.2.0",
        "@nestjs/core": "6.2.0",
        "@nestjs/testing": "6.2.0",
        "@types/jest": "24.0.13",
        "@types/ora": "3.2.0",
        "codecov": "3.5.0",
        "jest": "24.8.0",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.4.0",
        "ts-jest": "24.0.2",
        "ts-node": "8.1.0",
        "tsconfig-paths": "3.8.0",
        "typedoc": "0.14.2",
        "typescript": "3.4.4"
    },
    "scripts": {
        "build": "rm -Rf ./lib && tsc",
        "doc": "rm -Rf ./docs && typedoc ./src && touch ./docs/.nojekyll",
        "test:ci": "jest --runInBand",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
    }
}
