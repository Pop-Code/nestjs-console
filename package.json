{
    "name": "nestjs-console",
    "version": "3.1.0",
    "description": "A NestJS module that provide a cli",
    "keywords": [
        "nestjs",
        "module",
        "cli",
        "console",
        "commander"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "repository": "git@github.com:Pop-Code/nestjs-console.git",
    "author": "Rmannn <alex.hermann@pop-code.com>",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/common": "^6 || ^7",
        "@nestjs/core": "^6 || ^7",
        "commander": "^5 || ^6"
    },
    "dependencies": {
        "ora": "4.0.5",
        "prettier": "2.0.5"
    },
    "devDependencies": {
        "@nestjs/common": "7.4.1",
        "@nestjs/core": "7.4.1",
        "@nestjs/platform-express": "7.4.1",
        "@nestjs/testing": "7.4.1",
        "@types/jest": "26.0.7",
        "@types/node": "14.0.27",
        "codecov": "3.7.2",
        "commander": "6.0.0",
        "jest": "26.2.1",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.6.0",
        "ts-jest": "26.1.4",
        "ts-node": "8.10.2",
        "tsconfig-paths": "3.9.0",
        "typedoc": "0.17.8",
        "typescript": "3.9.7",
        "@typescript-eslint/eslint-plugin": "3.7.1",
        "@typescript-eslint/parser": "3.7.1",
        "eslint": "7.5.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-prefer-arrow": "1.2.2",
        "eslint-config-prettier": "6.11.0"
    },
    "scripts": {
        "build": "rm -Rf ./dist && tsc -b",
        "doc": "rm -Rf ./docs && typedoc ./src && touch ./docs/.nojekyll",
        "console": "node dist/test/console.js",
        "console:dev": "ts-node -r tsconfig-paths/register src/test/console.ts",
        "console:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/test/console.ts",
        "test": "jest",
        "test:build": "jest --testRegex .spec.js",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
        "lint": "eslint ./src/**/*.ts",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts}",
            "!src/index.ts",
            "!**/test/**"
        ],
        "coverageDirectory": "./coverage"
    },
    "engines": {
        "node": ">=0.10"
    }
}
