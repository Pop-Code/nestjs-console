{
    "name": "nestjs-console",
    "version": "4.0.0",
    "description": "A NestJS module that provide a cli",
    "keywords": [
        "nestjs",
        "module",
        "cli",
        "console",
        "commander"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "repository": "git@github.com:Pop-Code/nestjs-console.git",
    "author": "Rmannn <alex.hermann@pop-code.com>",
    "license": "MIT",
    "peerDependencies": {
        "@nestjs/common": "^6 || ^7",
        "@nestjs/core": "^6 || ^7",
        "commander": "^5 || ^6"
    },
    "dependencies": {
        "ora": "5.1.0"
    },
    "devDependencies": {
        "@nestjs/common": "7.4.4",
        "@nestjs/core": "7.4.4",
        "@nestjs/platform-express": "7.4.4",
        "@nestjs/testing": "7.4.4",
        "@types/jest": "26.0.14",
        "@types/node": "14.14.11",
        "@typescript-eslint/eslint-plugin": "4.4.1",
        "@typescript-eslint/parser": "4.4.1",
        "codecov": "3.8.0",
        "commander": "6.1.0",
        "prettier": "2.1.2",
        "eslint": "7.11.0",
        "eslint-config-prettier": "6.12.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prefer-arrow": "1.2.2",
        "jest": "26.5.3",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.6.3",
        "ts-jest": "26.4.1",
        "ts-node": "9.0.0",
        "tsconfig-paths": "3.9.0",
        "typedoc": "0.19.2",
        "typescript": "4.0.3"
    },
    "scripts": {
        "build": "rm -Rf ./dist && tsc -b",
        "doc": "rm -Rf ./docs && typedoc ./src && touch ./docs/.nojekyll",
        "console": "node dist/test/console.js",
        "console:dev": "ts-node -r tsconfig-paths/register src/test/console.ts",
        "console:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/test/console.ts",
        "test": "jest",
        "test:build": "jest --testRegex .spec.js",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
        "lint": "eslint ./src/**/*.ts",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts}",
            "!src/index.ts",
            "!**/test/**"
        ],
        "coverageDirectory": "./coverage"
    },
    "engines": {
        "node": ">=0.10"
    }
}
